<% customer_reviews.each do |review| %>
  <div class="customer-review-section">
    <div class="row m-0">
      <div class="col-4">
        <p class="kaftan small-text"><%= review.created_at.strftime('%B %d, %Y') %></p>
        <%= render 'shared/ratings', rating: review.rating %>
        <h6 class="mt-3"><%= review.user.first_name.capitalize %></h6>
      </div>
      <div class="col-6">
        <h5 class="mb-3"><%= review.title %></h5>
        <p class="mb-3">"<%= review.review %>"</p>
        <p class=""><span class="bold"><%= review.recommendation %></span>, I would recommend this product</p>
      </div>
    </div>
  </div>
<% end %>
