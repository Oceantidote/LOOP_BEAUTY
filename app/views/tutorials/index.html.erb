<div class="latest-videos-wrapper">
  <h2 class="insider-info-title text-center influencer-videos-title-mobile"><%= @user.first_name %> <%= @user.last_name %>'s tutorials</h2>
  <div class="influencer-videos-title-section">
    <div class="filters-container">
      <p>Sort by: newest</p>
      <%= image_tag 'dropdown-down.png', class: "dropdown-arrow" %>
    </div>
    <h2 class="insider-info-title text-center influencer-videos-title-web"><%= @user.first_name %> <%= @user.last_name %><%= @user.last_name.last == 's' ? "'" : "'s" %> tutorials</h2>
    <div class="filters-container">
      <p>Filter by: tutorials</p>
      <%= image_tag 'dropdown-down.png', class: "dropdown-arrow" %>
    </div>
  </div>
  <div class="row" style="margin: 30px 0;">
    <% @tutorials.each do |tutorial| %>
      <div class="col-xs-12 col-md-6 col-lg-3">
        <%= link_to tutorial_path(tutorial), class: "video-card-link card-link" do %>
          <div class="homepage-video-card">
            <div class="video-holder" style="background-image: url(<%= url_for(tutorial.cover_photo) %>)">
              <%= image_tag 'play-button.png', class: "play-button", width: 80 %>
            </div>
            <div class="homepage-video-card-text">
              <p class="video-card-text-title">by <%= tutorial.user.instagram %></p>
              <p class="video-card-text-content"><%= tutorial.title %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
