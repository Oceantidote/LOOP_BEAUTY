<div class="forgotten-password-wrapper">
  <h1>Forgotten password</h1>
  <div class="forgotten-password-container">
    <h3>Forgot your password?</h3>
    <h5>Please enter your email address below. You will receive a link to reset your password.</h5>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    label: false,
                    placeholder: "Email address",
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "CONTINUE", class: "primary-button" %>
      </div>
    <% end %>
  </div>
</div>
