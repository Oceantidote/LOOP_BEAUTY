<div class="sessions-new-container position-relative">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'h-100' }) do |f| %>
    <div class="log-in-container">
      <h1 class="text-center mb-3 mb-sm-5 devise-title">login</h1>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: false,
                      placeholder: "email address",
                      input_html: { autocomplete: "email", class: 'contact-form-input mb-3 mb-sm-5' } %>
          <%= f.input :password,
                      required: false,
                      placeholder: "password",
                      label: false,
                      input_html: { autocomplete: "current-password", class: 'contact-form-input mb-3 mb-sm-5' } %>
          <div class="d-block d-md-flex justify-content-between mb-4">
            <div class="remember-me-container">
              <%= f.input :remember_me, as: :boolean, label: 'remember me', class: 'lighter ls-xs'  if devise_mapping.rememberable? %>
            </div>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "forgot password?", new_password_path(resource_name), class: 'lighter ls-xs' %>
            <% end %>
          </div>
          <%= f.button :submit, "submit", class: "primary-button w-100" %>
        </div>
        <div class="form-actions">
          <div class="d-flex justify-content-center">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "create account", new_registration_path(resource_name), class: 'lighter ls-xs' %>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
  <%= image_tag 'the_net_watermark.png', class: 'the-net-watermark d-none d-sm-block' %>
</div>

<script>
  const container = document.querySelector('.sessions-new-container');
  if (window.innerWidth < 768) {
    container.style.minHeight = `calc(${window.innerHeight - 96}px)`
    container.style.height = `calc(${window.innerHeight - 96}px)`
  }
</script>
