<script>
  // Fixing poor naming 😔
  const errors = document.querySelectorAll('.invalid-feedback')
  errors.forEach( (error) => {
    if (error.innerHTML == "Accepts terms You must accept the Terms &amp; Conditions") {
      error.innerHTML = "You must accept the Terms &amp; Conditions"
    }
  })

  const signUpSteps = document.querySelectorAll('.sign-up-steps');
  const nextButton = document.querySelectorAll('.sign-up-next');
  const backButton = document.querySelectorAll('.sign-up-back');
  nextButton.forEach((next) => {
    next.addEventListener('click', (event) => {
      signUpSteps.forEach(step => step.classList.add('d-none'));
      event.target.parentElement.parentElement.nextElementSibling.classList.remove('d-none')
    })
  })

  backButton.forEach((back) => {
    back.addEventListener('click', (event) => {
      signUpSteps.forEach(step => step.classList.add('d-none'));
      event.target.parentElement.parentElement.previousElementSibling.classList.remove('d-none')
    })
  })

  const container = document.querySelector('.sessions-new-container');
  console.log(container)
  if (window.innerWidth < 768) {
    container.style.minHeight = `calc(${window.innerHeight - 96}px)`
    container.style.height = `calc(${window.innerHeight - 96}px)`
  }
</script>

