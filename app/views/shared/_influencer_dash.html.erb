  <%= link_to user_dashboard_path(@user), class: "each-dash-link" do %>
    <%= image_tag "account-overview.png", class: "dash-links-image", alt: "dash account icon" %>Account Overview
  <% end %>
  <%= link_to user_my_orders_path(@user), class: "each-dash-link" do %>
    <%= image_tag "basket.png", class: "dash-links-image", alt: "dash basket icon" %>My Orders
  <% end %>
