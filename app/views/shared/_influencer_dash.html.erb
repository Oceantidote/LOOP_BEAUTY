    <%= image_tag "share.png", class: "dash-links-image", alt: "dash share icon" %>Share
  <% end %>
  <%= link_to user_analytics_path(@user), class: "each-dash-link" do %>
    <%= image_tag "analytics.png", class: "dash-links-image", alt: "dash analytics icon" %>Analytics
  <% end %>
  <%= link_to user_showroom_path(@user), class: "each-dash-link" do %>
    <%= image_tag "lipstick.png", class: "dash-links-image", alt: "dash lipstick icon" %>Showroom
  <% end %>
  <%= link_to user_account_details_path(@user), class: "each-dash-link" do %>
    <%= image_tag "default-user.png", class: "dash-links-image", alt: "dash user icon" %>Account Details
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete, class: "each-dash-link" do %>
    <%= image_tag "dash-sign-out.png", class: "dash-links-image", alt: "dashsign out icon" %>Sign Out
  <% end %>
</div>

