        <%= link_to new_user_session_path, class: "nav-link" do %>
          <%= image_tag 'default-user.png' %>
        <% end %>
      <% end %>
    </li>
    <li class="nav-item mobile-hidden">
      <%= link_to bag_path, class: "nav-link basket-icon-container" do %>
        <%= image_tag 'basket.png' %>
        <p class="basket-item-count basket-web"><%= @basket.basket_products.size %></p>
      <% end %>
    </li>
  </ul>
