<%= simple_form_for Product.new, url: form_url, method: :get, remote: true, html: { id: 'product-filter', onchange: "Rails.fire(this, 'submit')" } do |f| %>
  <div class="products-index-container">
    <div class="partial-filters-one">
      <h4>Refine By</h4>
      <div>
        <div class="filters-container">
          <!-- <p>Sort by: New in</p> -->
          <%#= image_tag 'dropdown-down.png', class: "dropdown-arrow" %>
          <%= f.fields_for :sort do |s| %>
            <%= s.input :method, collection: [['New', 'created_at,desc'], ['High to low', 'price_cents,desc'], ['Low to high', 'price_cents,asc']], selected: sort_method, label: false %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="partial-filters-two">
    <%= simple_form_for Product.new, url: form_url, method: :get, remote: true, html: { id: 'product-filter', onchange: "Rails.fire(this, 'submit')" } do |f| %>
      <div class="partial-filters">
        <div class="partial-filters_collection">
          <h6>Category</h6>
          <%#= collection_check_boxes :category, :product_id, Category.all, :id, :name %>
          <%= f.input :category, collection: Category.all, as: :check_boxes, required: false, label: "", checked: params[:product] ? params[:product][:category] : [] %>
        </div>
        <% unless params[:controller] == 'brands' %>
          <div class="partial-filters_collection">
            <h6>Brand</h6>
            <%#= collection_check_boxes :brand, :product_id, Brand.all, :id, :name %>
            <%= f.input :brand, collection: Brand.all, as: :check_boxes, required: false, label: "", checked: params[:product] ? params[:product][:brand] : [] %>
          </div>
        <% end %>
      </div>
    <% end %>
