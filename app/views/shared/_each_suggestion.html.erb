<% if products.count > 0 %>
  <div id="suggestions-box">
    <% products.each do |product| %>
      <%= link_to product_path(product), class: 'suggestion no-decoration' do %>
        <div class="autocomplete_suggestion">
          <%= image_tag url_for(product.shades.first.card_photo), class: "autocomplete-image", alt: "product shade photo" %>
          <div style="flex: 1; margin-left: 10px;">
            <p class="no-margin boldest small-text" style="max-width: 165px;"><%= product.title %></p>
          </div>
          <% if @locale == 'US' %>
            <p class="no-margin boldest small-text"><%= humanized_money_with_symbol product.us_price %></p>
          <% else %>
            <p class="no-margin boldest small-text"><%= humanized_money_with_symbol product.price %></p>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
