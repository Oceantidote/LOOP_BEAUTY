<% if current_user.wishlist.products.include?(product) %>
  <%= link_to wishlist_product_path(WishlistProduct.where(wishlist: current_user.wishlist, product: product, shade: shade).first), method: :delete, remote: :true, class: 'no-decoration' do %>
    <%= image_tag 'heart-after.png' %>
  <% end %>
<% else %>
  <%= link_to product_wishlist_products_path(product), method: :post, remote: :true, class: 'no-decoration' do %>
    <%= image_tag 'heart-before.png' %>
  <% end %>
<% end %>
