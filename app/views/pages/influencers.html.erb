<div class="influencers-wrapper">
  <h2 class="insider-info-title text-center">Shop by Influencer</h2>
  <div class="container d-flex justify-content-center">
    <div class="influencers-container">
      <div class="row">
        <% @num = 0 %>
        <% @influencers.each do |influencer| %>
          <div class="col-xs-12 col-sm-6 col-lg-3">
            <%= link_to user_path(influencer), class: "influencer-card-link" do %>
              <div class="each-influencer-avatar-card text-center">

                  <%= image_tag (influencer.avatar_photo.attached? ? influencer.avatar_photo : 'https://cdn.shopify.com/s/files/1/0912/3996/products/AFB-closeup-final_2048x.jpg?v=1548689204'), class: "influencer-large-avatar" %>

                <h6><%= influencer.instagram %></h6>
              </div>
            <% end %>
          </div>
          <% @num += 1 %>
        <% end %>
      </div>
    </div>
  </div>
</div>
