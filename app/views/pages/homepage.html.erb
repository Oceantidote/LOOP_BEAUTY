<div class="insider-info-wrapper">
  <h2 class="insider-info-title text-center">Insider Info</h2>
  <div class="insider-info-container">
    <div class="row">
      <% @insider_articles.each do |article| %>
        <div class="col-sm-12 col-md-4">
          <%= link_to insider_article_path(article), class: "card-link insider-info-card-link" do %>
            <div class="insider-info-cards">
              <div class="insider-info-left">
                <div class="insider-info-text">
                  <p class="insider-info-title"><%= article.category %></p>
                  <p class="old-standard"><%= article.title %></p>
                </div>
              </div>
              <div class="insider-info-right">
                <% user = User.select { |u| u.first_name == article.by.split(" ")[0] } %>
                <div class="insider-info-image" style="background-image: url(<%= url_for(user.first.avatar_photo) %>)"></div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% if @tutorial %>
  <div class="latest-videos-wrapper">
    <h2 class="insider-info-title text-center">Latest Videos</h2>
    <div class="row" style="margin: 30px 0;">
      <% @tutorials.each do |tutorial| %>
        <div class="col-xs-12 col-md-6 col-lg-3">
          <%= link_to tutorial_path(tutorial), class: "video-card-link card-link" do %>
            <div class="homepage-video-card">
              <div class="video-holder" style="background-image: url(<%= url_for(tutorial.cover_photo) %>)">
                <%= image_tag 'play-button.png', class: "play-button", width: 80 %>
              </div>
              <div class="homepage-video-card-text">
                <p class="video-card-text-title">by <%= tutorial.user.instagram %></p>
                <p class="video-card-text-content"><%= tutorial.title %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
