<div class="insider-info-wrapper">
  <h2 class="insider-info-title text-center">Insider Info</h2>
  <div class="insider-info-container lookbook-max-width">
    <div class="row-carousel">
      <% @insider_articles.each do |article| %>
        <div class="col-12 col-sm-12 col-md-4" style="padding: 0 10px;">
          <%= link_to insider_article_path(article), class: "card-link insider-info-card-link" do %>
            <div class="insider-info-cards">
              <div class="insider-info-left">
                <div class="insider-info-text">
                  <p class="insider-info-title"><%= article.category %></p>
                  <p class="didot"><%= article.title %></p>
                </div>
              </div>
              <div class="insider-info-right">
                <% user = User.select { |u| u.first_name == article.by.split(" ")[0] } %>
                <div class="insider-info-image" style="background-image: url(<%= url_for(user.first.avatar_photo) %>)"></div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% if @tutorials %>
  <div class="latest-videos-wrapper">
    <div class="latest-videos-container lookbook-max-width">
      <h2 class="insider-info-title text-center">Latest Videos</h2>
      <div class="row-carousel" style="margin: 30px 0;">
        <% @tutorials.each do |tutorial| %>
          <%= render 'shared/tutorials_card', tutorial: tutorial %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
