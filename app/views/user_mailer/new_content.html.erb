<link href="https://fonts.googleapis.com/css?family=Muli:400,600,900&display=swap" rel="stylesheet">
<div class="email-wrapper">
  <div class="black-bar" style="height: 16px; background: #000;"></div>
  <div class="email-container" style="border: 3px solid #000; padding: 16px; overflow: scroll;">
    <div class="email-logo-container" style="width: 100%; display: flex; justify-content: center; align-items: center">
      <a href="https://infinite-journey-41892.herokuapp.com/">
        <img class="loop-logo" style="width: 200px;" src="https://infinite-journey-41892.herokuapp.com/assets/loop-beauty-logo-21ea5aaddb1f016acbe1be8b354d3dee32d32e991875035e9b6da3f5780a669b.svg" alt="loop beauty logo">
      </a>
    </div>
    <div class="line-break" style="width: 100%; border-top: 1px solid rgba(0,0,0,0.2); margin: 16px 0;"></div>
    <div style="max-width: 700px;">
      <div style="margin: 50px 0;">
        <h4>Hi Ariel,</h4>
        <% if @rejected %>
          <h2><%= @influencer.full_name %> has edited a rejected <%= @content.class.to_s.downcase %>!</h2>
        <% else %>
          <h2><%= @influencer.full_name %> has shared a new <%= @content.class.to_s.downcase %>!</h2>
        <% end %>
        <p>The <%= @content.class.to_s.downcase %> '<%= @content.title %>' is <%= @content.status %> and contains <%= @content.products.count %> products.</p>
        <% if @rejected %>
          <p><%= @content.class.to_s %>'s rejection message:</p>
          <p><%=  %></p>
        <% end %>
      </div>
    </div>
    <div class="line-break" style="width: 100%; border-top: 1px solid rgba(0,0,0,0.2); margin: 16px 0;"></div>
  </div>
  <div class="black-footer" style="height: 80px; background: #000;"></div>
</div>
