<div class="dashboard-wrapper">
  <div class="dashboard-container-title mb-3 px-3 px-md-0">
    <h4 class="ls-xs mb-2">admin portal</h4>
  </div>
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <%= render 'admin/shared/admin_dash' %>
    </div>
    <div class="dash-content-container">
      <p class="ls-xs mb-3 mb-md-2 pl-3 pl-md-0">content / offer banner</p>
      <div class="dash-content p-3">
        <div class="admin-form-container w-100 px-md-5 py-5 d-flex justify-content-center align-items-center">
          <%= simple_form_for @offer_banner, url: admin_change_offer_banner_path, method: :post, html: { class: 'w-100' } do |f| %>
            <%= f.input :content, label: false, placeholder: 'enter the offer here...', input_html: { class: 'contact-form-input w-100 mw-100' } %>
            <%= f.submit 'change offer banner', class: 'primary-button personal-details-button small-text' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
