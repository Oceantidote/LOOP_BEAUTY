<div class="container">
  <% @codes.each do |code| %>
    <div>
      <%= code.code %> - <%= code.discount %> - <%= link_to 'Edit', edit_admin_discount_code_path(code) %>
      <% if User.find_by(referral_code: code.code) %>
        - user referral code
      <% elsif code.freebie.present? %>
        - Freebie
      <% elsif code.orders.any? || code.baskets.any? %>
        - in use
      <% else %>
        - <%= link_to 'Delete', admin_discount_code_path(code), method: :delete %>
      <% end %>
    </div>
  <% end %>
  <%= link_to 'Add discount code', new_admin_discount_code_path %>
</div>
