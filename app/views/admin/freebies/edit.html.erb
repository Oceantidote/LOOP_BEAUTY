<div class="admin-wrapper minimum-height">
  <div class="admin-container" style="max-width: 800px;">
    <h2 class="insider-info-title mlb-title text-center">Create a freebie</h2>
    <hr>
    <div class="admin-form-container freebies-form-container">
      <%= simple_form_for [:admin, @freebie] do |f| %>
        <div class="personal-details-input">
          <p class="boldest muli s-medium-text text-right no-margin">Heading</p>
          <%= f.input :heading, label: false, input_html: { class: "contact-form-input" } %>
        </div>
        <div class="personal-details-input">
          <p class="boldest muli s-medium-text text-right no-margin">Blurb</p>
          <%= f.input :blurb, label: false, input_html: { class: "contact-form-input" } %>
        </div>
        <div class="personal-details-input">
          <p class="boldest muli s-medium-text text-right no-margin">Banner</p>
          <%= f.input :banner, label: false %>
        </div>
        <div class="personal-details-input">
          <p class="boldest muli s-medium-text text-right no-margin">Display?</p>
          <%= f.input :display, label: false, input_html: { class: "contact-form-input lb-checkbox" } %>
        </div>
          <%= simple_fields_for @freebie.discount_code  do |a| %>
            <div class="personal-details-input">
              <p class="boldest muli s-medium-text text-right no-margin">Code</p>
              <%= a.input :code, label: false, input_html: { class: "contact-form-input" } %>
            </div>
            <div class="personal-details-input">
              <p class="boldest muli s-medium-text text-right no-margin">Discount</p>
              <%= a.input :discount, label: false, input_html: { class: "contact-form-input" } %>
            </div>
            <div class="personal-details-input">
              <p class="boldest muli s-medium-text text-right no-margin">Uses</p>
              <%= a.input :uses, label: false, input_html: { class: "contact-form-input" } %>
            </div>
            <div class="personal-details-input">
              <p class="boldest muli s-medium-text text-right no-margin">User uses</p>
              <%= a.input :user_uses, label: false, input_html: { class: "contact-form-input" } %>
            </div>
          <% end %>
          <%= f.submit 'UPDATE FREEBIE', class: 'primary-button personal-details-button small-text' %>
      <% end %>
    </div>
  </div>
</div>
