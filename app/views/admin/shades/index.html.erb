<div class="dashboard-wrapper">
  <div class="container">
    <div class="dash-content-container">
      <h2 class="insider-info-title mlb-title text-center">SKU's</h2>
      <hr>
        <div class="p-4">
          <%= link_to 'DOWNLOAD', admin_sku_download_path(format: :csv), class: 'secondary-button', method: :get, style: 'margin: 0 0 50px 0' %>
          <table>
            <tr>
              <th class="kaftan">Brand</th>
              <th class="kaftan">Product</th>
              <th class="kaftan">Shade</th>
              <th class="kaftan">SKU</th>
            </tr>
            <% @shades.each_with_index do |shade, index| %>
              <tr class="<%= index.even? ? 'shaded' : '' %>">
                <td><%= shade.product.brand.name %></td>
                <td><%= shade.product.title %></td>
                <td><%= shade.name %></td>
                <td><%= shade.sku %></td>
              </tr>
            <% end %>
          </table>
        </div>
        <div class="col-12 d-flex justify-content-center">
          <p class="boldest kaftan small-text grey"><%= page_entries_info @shades %></p>
        </div>
        <div class="paginator-container">
          <%= paginate @shades %>
        </div>
    </div>
  </div>
</div>
