<div class="card-image-results">
  <div class="card mb-3">
    <%= link_to product_path(product) do %>
      <div class="card_image position-relative">
        <%= link_to product_path(product) do %>
          <% if product.lead_product_image.attached? %>
            <%= image_tag url_for(product.lead_product_image.variant(resize: '450x450')), alt: "product shade photo" %>
          <% elsif product.shades.first&.card_photo %>
            <%= image_tag url_for(product.shades.first.card_photo.variant(resize: '450x450')), alt: "product shade photo" %>
          <% else %>
            <div style="background-color: #EFEFEF; min-height: 131.5px; max-height: 204px; height: 13rem; width: 100%"></div>
          <% end %>
        <% end %>
        <div class="products-admin-options">
          <%= link_to 'remove', admin_product_remove_new_in_path(product), method: :post, class: 'primary-button bg-delete admin-options-button m-0' %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="card-info">
    <p class="mb-2 truncate-text lighter ls-xs"><%= product.brand.name %>, <%= product.title %></p>
    <p class="neue-machina text-secondary ls-xs lighter"><%= humanized_money_with_symbol(product.price) %></p>
  </div>
</div>
