<h4><%= @product.title %></h4>

<%= simple_form_for @product do |f| %>
  <%= f.input :weight %>
  <%= f.input :measurement %>
  <%= f.input :title %>
  <%= f.input :details %>
  <%= f.input :lb_id %>
  <%= f.input :category_id, collection: Category.all %>
  <%= f.input :sub_category_id, collection: SubCategory.all %>
  <%= f.input :brand_id, collection: Brand.all %>
  <%= f.input :department_id, collection: Department.all %>
  <%= f.input :price %>
  <%= f.input :demoable %>
  <%= f.submit %>
<% end %>

<h4>Shades</h4>
<% @product.shades.each do |shade| %>
    <%= simple_form_for [:admin, shade] do |f| %>
        <%= f.input :name %>
        <%= f.input :sku %>
        <%= f.input :photos %>
        <%= f.submit %>
    <% end %>
    <%= link_to 'Destroy', admin_shade_path(shade), method: :delete %>
<% end %>
<h5>New Shade</h5>
<%= simple_form_for [:admin, @product, Shade.new] do |f| %>
    <%= f.input :name %>
    <%= f.input :sku %>
    <%= f.input :photos %>
    <%= f.submit %>
<% end %>

<h4>Benefits</h4>
<% @product.product_benefits.each do |product_benefit| %>
  <div>
    <h6><%= product_benefit.benefit.name %></h6>
    <%= link_to 'Destroy', admin_product_benefit_path(product_benefit), method: :delete %>
  </div>
<% end %>
<h5>New Benefit</h5>
<%= simple_form_for [:admin, @product, ProductBenefit.new] do |f| %>
  <%= f.input :benefit_id, collection: Benefit.all %>
  <%= f.submit %>
<% end %>

