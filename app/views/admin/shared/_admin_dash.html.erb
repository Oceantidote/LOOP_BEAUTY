  <% end %>
  <%= link_to admin_freebies_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "freebie-icon.png", class: "dash-links-mobile-image" %>
  <% end %>
  <%= link_to admin_lookbooks_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "lookbook-icon.png", class: "dash-links-mobile-image" %>
  <% end %>
  <%= link_to admin_tutorials_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "tutorial-icon.png", class: "dash-links-mobile-image" %>
  <% end %>
  <%= link_to destroy_user_session_path, method: :delete, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "dash-sign-out.png", class: "dash-links-mobile-image" %>
  <% end %>
</div>
