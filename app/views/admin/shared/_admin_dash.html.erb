    <%= image_tag "lipstick.png", class: "dash-links-mobile-image", alt: "lipstick icon" %>
  <% end %>
  <%= link_to admin_freebies_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "freebie-icon.png", class: "dash-links-mobile-image", alt: "freebie icon" %>
  <% end %>
  <%= link_to admin_lookbooks_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "lookbook-icon.png", class: "dash-links-mobile-image", alt: "lookbook icon" %>
  <% end %>
  <%= link_to admin_tutorials_path, class: "each-dash-link-mobile no-decoration" do %>
    <%= image_tag "admin-play-button.png", class: "dash-links-mobile-image", alt: "tutorial icon" %>
  <% end %>
