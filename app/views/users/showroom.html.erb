<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <%= render 'shared/influencer_dash' %>
    </div>
    <div class="dash-content-container">
      <div class="influencer-credit-container">
        <p class="small-text boldest underline small-margin-bottom muli">Credit Remaining</p>
        <p class="boldest small-margin-bottom muli"><%= humanized_money_with_symbol @user.remaining_credit %></p>
        <p class="v-small-text small-margin-bottom muli">Your credit expires last day of the month</p>
      </div>
      <h2 class="insider-info-title mlb-title text-center">Showroom</h2>
      <hr>
      <%= render 'shared/card_results',sort_method: @sort_method, products: @products, form_url: user_showroom_path(@user) %>
    </div>
  </div>
</div>
