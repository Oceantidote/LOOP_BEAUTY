<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <h4 class="mb-5">my profile</h4>
  </div>
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <% if current_user.influencer %>
        <%= render 'shared/influencer_dash' %>
      <% else %>
        <%= render 'shared/dash' %>
      <% end %>
    </div>
    <div class="dash-content-container">
      <p class="ls-xs mb-2">preference centre</p>
      <div class="dash-content p-4">
        <div class="preference-newsletter mb-5">
          <h5 class="neue-machina ls-xs mb-5"><strong>Data Processing</strong></h5>
          <p class="ls-xs mb-3">Email: Newsletter</p>
          <p class="neue-machina lighter ml-4 mb-2">We will send you beauty news, exclusive promotions and may ask you to review products and services after you place an order.</p>
          <%= simple_form_for current_user, url: user_newsletter_path, method: :patch, html: { onchange: "this.submit()" } do |f| %>
            <div class="remember-me-container ml-4">
              <%= f.input :newsletter, label: "#{current_user.newsletter ? 'click here to unsubscribe' : 'click here to subscribe'}", value: current_user.newsletter %>
            </div>
          <% end %>
        </div>
        <div class="preference-terms mb-5">
          <%= link_to terms_and_conditions_path, class: "underline-hover" do %>
            <p class="ls-xs">Terms & Conditions</p>
          <% end %>
          <p class="lighter ls-xs ml-4">You agreed to our Terms & Privacy Policy on 24/04/2019</p>
        </div>
        <p class="neue-machina lighter">**Please note that we will continue to email you in relation to any orders you place such as order and delivery updates.**</p>
      </div>
    </div>
  </div>
</div>
