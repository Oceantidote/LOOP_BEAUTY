    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-all-influencers" role="tabpanel" aria-labelledby="pills-all-influencers-tab">
        <% @users.each do |influencer| %>
          <div class="influencer-card-container">
            <div class="influencer-card-avatar">
              <%= image_tag url_for(influencer.avatar_photo.variant(resize: '300x300')) %>
            </div>
            <div class="influencer-card-info-container">
              <div class="influencer-card-info">
                <% if !influencer.published %>
                  <p class="ls-xs lighter">UNPUBLISHED</p>
                <% elsif current_user&.admin? %>
                  <p class="ls-xs lighter"><%= influencer.affiliate_link %></p>
                <% end %>
                <%= link_to user_path(influencer) do %>
                  <h2 class="neue-machina ls-sm mb-3"><%= influencer.instagram %></h2>
                <% end %>
                <p class="text-center lighter ls-sm mb-5"><%= influencer.description %></p>
                <div class="d-block d-sm-flex justify-content-center">
                  <div class="mr-0 mr-sm-4 mb-3 mb-sm-0 lighter">
                    <i class="fab fa-instagram"></i>
                    <span>375 posts</span>
                  </div>
                  <div class="mb-3 mb-sm-0 lighter">
                    <i class="fab fa-youtube"></i>
                    <span>15 videos</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
