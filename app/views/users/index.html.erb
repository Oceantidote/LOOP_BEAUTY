  <div class="show-page-entries">
    <p class="ls-xs lighter"><%= page_entries_info @users %></p>
  </div>
</div> -->
<div class="col-12 d-flex justify-content-center">
  <%= paginate @users %>
</div>


<% if policy([:admin, User]).create? %>
  <div class="admin-options">
    <hr>
    <div class="container">
      <h6 class="boldest">Admin options</h6>
      <div class="d-flex">
        <%= link_to 'ADD INFLUENCER', new_admin_influencer_path, class: 'secondary-button' %>
      </div>
    </div>
    <hr>
  </div>
<% end %>
