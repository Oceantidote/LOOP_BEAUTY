<%= content_for :meta_title do %>
  Shop by Influncer
<% end %>

<div class="content-padding">
  <div class="content-container position-relative">
    <ul class="nav nav-pills influencer-tabs mb-5" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link py-1 mr-3 ls-sm active" id="pills-all-influencers-tab" data-toggle="pill" href="#pills-all-influencers" role="tab" aria-controls="pills-all-influencers" aria-selected="true">All Influencers</a>
      </li>
      <li class="nav-item">
        <a class="nav-link py-1 mr-3 ls-sm" id="pills-hair-tab" data-toggle="pill" href="#pills-hair" role="tab" aria-controls="pills-hair" aria-selected="false">Hair</a>
      </li>
      <li class="nav-item">
        <a class="nav-link py-1 mr-3 ls-sm" id="pills-makeup-tab" data-toggle="pill" href="#pills-makeup" role="tab" aria-controls="pills-makeup" aria-selected="false">Makeup</a>
      </li>
      <li class="nav-item">
        <a class="nav-link py-1 ls-sm" id="pills-skincare-tab" data-toggle="pill" href="#pills-skincare" role="tab" aria-controls="pills-skincare" aria-selected="false">Skincare</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-all-influencers" role="tabpanel" aria-labelledby="pills-all-influencers-tab">
        <% @users.each do |influencer| %>
          <div class="influencer-card-container">
            <div class="influencer-card-avatar">
              <%= image_tag url_for(influencer.avatar_photo.variant(resize: '300x300')) %>
            </div>
            <div class="influencer-card-info-container">
              <div class="influencer-card-info">
                <%= link_to user_path(influencer) do %>
                  <h2 class="neue-machina ls-sm mb-3"><%= influencer.instagram %></h2>
                <% end %>
                <p class="text-center lighter ls-sm mb-5"><%= influencer.description %></p>
                <div class="d-flex justify-content-center">
                  <div class="mr-4 lighter">
                    <i class="fab fa-instagram"></i>
                    <span>375 posts</span>
                  </div>
                  <div class="lighter">
                    <i class="fab fa-youtube"></i>
                    <span>15 videos</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% if !influencer.published %>
            <p>UNPUBLISHED</p>
          <% elsif current_user&.admin? %>
            <p><%= influencer.affiliate_link %></p>
          <% end %>
        <% end %>
      </div>
      <div class="tab-pane fade" id="pills-hair" role="tabpanel" aria-labelledby="pills-hair-tab">

      </div>
      <div class="tab-pane fade" id="pills-makeup" role="tabpanel" aria-labelledby="pills-makeup-tab">

      </div>
      <div class="tab-pane fade" id="pills-skincare" role="tabpanel" aria-labelledby="pills-contact-tab">

      </div>
    </div>
  </div>
</div>
