<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <% if current_user.influencer? %>
        <%= render 'shared/influencer_dash' %>
      <% else %>
        <%= render 'shared/dash' %>
      <% end %>
    </div>
    <% if current_user.influencer? %>
      <div class="dash-content-container">
        <h2 class="insider-info-title pt-2 pb-2 text-center">Account Overview</h2>
        <% if current_user.affiliate_link %>
          <div class="link-row pb-2">
            <h5 class="mr-2">Your affiliate link: </h5>
            <input type="text" value="<%= current_user.affiliate_link %>" id="link" class="aff-link min-200-w">

            <!-- The button used to copy the text -->
            <button class="aff-btn" onclick="myFunction(<%= current_user.id %>)">Copy Link</button>
          </div>
        <% end %>
        <hr>
        <div class="row m-3">
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_showroom_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'lipstick.png', alt: "dash lipstick icon" %>
                  <h5>Showroom</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_analytics_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'analytics.png', alt: "dash analytics icon" %>
                  <h5>Analytics</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_share_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'share.png', alt: "dash share icon" %>
                  <h5>Share</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_my_orders_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'basket.png', alt: "dash basket icon" %>
                  <h5>My Orders</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_account_details_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'default-user.png', alt: "dash user icon" %>
                  <h5>Account Details</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_preference_centre_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'dash-preferences.png', alt: "dash preferences icon" %>
                  <h5>Preference Center</h5>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="dash-content-container">
        <h2 class="insider-info-title mlb-title text-center">Hello <%= current_user.first_name %> <%= current_user.last_name %></h2>
        <hr>
        <div class="row m-3">
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_my_orders_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'basket.png', alt: "dash basket icon" %>
                  <h5>My Orders</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_my_products_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'lipstick.png', alt: "dash lipstick icon" %>
                  <h5>My Products</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_refer_a_friend_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'dash-refer.png', alt: "dash refer a friend icon" %>
                  <h5>Refer a Friend</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_wishlist_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'dash-wish.png', alt: "dash wishlist icon" %>
                  <h5>Wishlist</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_account_details_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'default-user.png', alt: "dash user icon" %>
                  <h5>Account Details</h5>
                </div>
              <% end %>
            </div>
          </div>
          <div class="col-6 col-lg-4" style="padding: 0;">
            <div class="dash-home-options">
              <%= link_to user_preference_centre_path(current_user), class: "dash-home-option-links" do %>
                <div class="each-dash-home-option">
                  <%= image_tag 'dash-preferences.png', alt: "dash preferences icon" %>
                  <h5>Preference Center</h5>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script>
  function myFunction() {
    /* Get the text field */
    var copyText = document.getElementById('link');

    /* Select the text field */
    copyText.select();
    copyText.setSelectionRange(0, 99999); /*For mobile devices*/

    /* Copy the text inside the text field */
    document.execCommand("copy");

    /* Alert the copied text */
    // alert("Copied the text: " + copyText.value);
  }
</script>
