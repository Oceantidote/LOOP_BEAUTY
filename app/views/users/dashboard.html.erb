<% if current_user.influencer? %>
  <%= link_to 'New Lookbook', new_lookbook_path %>
  <%= link_to 'New Tutorial', new_tutorial_path %>
<% end %>
<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <h2 class="insider-info-title mlb-title text-center dash-mobile-title">My Loop Beauty</h2>
      <h2 class="insider-info-title text-center dash-mobile-name">Hello <%= current_user.first_name %> <%= current_user.last_name %></h2>
      <%= render 'shared/dash' %>
    </div>
    <div class="dash-content-container">
      <h2 class="insider-info-title mlb-title text-center">Hello <%= current_user.first_name %> <%= current_user.last_name %></h2>
      <hr>
      <div class="dash-home-options">
        <%= link_to user_my_orders_path(current_user), class: "dash-home-option-links" do %>
          <div class="each-dash-home-option">
            <%= image_tag 'basket.png' %>
            <h5>My Orders</h5>
          </div>
        <% end %>

        <div class="dash-home-options-line-break"></div>
        <%= link_to user_my_orders_path(current_user), class: "dash-home-option-links" do %>
          <div class="each-dash-home-option">
            <%= image_tag 'dash-wish.png' %>
            <h5>Wishlist</h5>
          </div>
        <% end %>
        <div class="dash-home-options-line-break"></div>
        <%= link_to user_my_orders_path(current_user), class: "dash-home-option-links" do %>
          <div class="each-dash-home-option">
            <%= image_tag 'default-user.png' %>
            <h5>Account Details</h5>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
