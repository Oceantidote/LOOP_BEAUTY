<script>

  reqD = document.querySelectorAll('.req-d-add');
  reqB = document.querySelectorAll('.req-b-add');
  delButton = document.getElementById('acc-add-delivery')
  bilButton = document.getElementById('acc-add-billing')

  function isfilled(element) {
    return element != ""
  }

  reqD.forEach((field) => {
    field.addEventListener('keyup', () => {
      myArray = []
      reqD.forEach((input) => {
        myArray.push(input.value)
      })
      console.log(myArray.every(isfilled))
      if (myArray.every(isfilled)) {
        delButton.disabled = false;
        delButton.classList.remove('disabled')
      } else {
        delButton.disabled = true;
        delButton.classList.add('disabled')
      }
    })
  })

  reqB.forEach((field) => {
    field.addEventListener('keyup', () => {
      myArray = []
      reqB.forEach((input) => {
        myArray.push(input.value)
      })
      console.log(myArray.every(isfilled))
      if (myArray.every(isfilled)) {
        bilButton.disabled = false;
        bilButton.classList.remove('disabled')
      } else {
        bilButton.disabled = true;
        bilButton.classList.add('disabled')
      }
    })
  })

  tabOne = document.querySelector('.account-tab-one');
  tabTwo = document.querySelector('.account-tab-two');
  tabThree = document.querySelector('.account-tab-three');
  arrows = document.querySelectorAll('.acc-arrow');
  contentOne = document.querySelector('.account-content-one');
  contentTwo = document.querySelector('.account-content-two');
  contentTwoAddress = document.querySelector('.account-content-two-add-address');
  contentThree = document.querySelector('.account-content-three');
  addressButton = document.querySelector('.address-button');

  tabs = document.querySelectorAll('.all-tabs');
  tabs.forEach(function(tab) {
    tab.addEventListener('click', (e) => {
      document.querySelectorAll('.all-tabs').forEach(function(tab) { tab.classList.remove('account-active-tab') });
      e.currentTarget.classList.add('account-active-tab');
    })
  });

  tabOne.addEventListener('click', function() {
    arrows.forEach(arrow => arrow.classList.remove('acc-arrow-show'));
    tabOne.firstElementChild.classList.add('acc-arrow-show');
    contentOne.classList.add('account-content-show');
    contentTwo.classList.remove('account-content-show');
    contentThree.classList.remove('account-content-show');
    contentTwoAddress.classList.remove('account-content-show');

  });

  tabTwo.addEventListener('click', function() {
    arrows.forEach(arrow => arrow.classList.remove('acc-arrow-show'));
    tabTwo.firstElementChild.classList.add('acc-arrow-show');
    contentTwo.classList.add('account-content-show');
    contentOne.classList.remove('account-content-show');
    contentThree.classList.remove('account-content-show');
    contentTwoAddress.classList.remove('account-content-show');

  });

  tabThree.addEventListener('click', function() {
    arrows.forEach(arrow => arrow.classList.remove('acc-arrow-show'));
    tabThree.firstElementChild.classList.add('acc-arrow-show');
    contentThree.classList.add('account-content-show');
    contentOne.classList.remove('account-content-show');
    contentTwo.classList.remove('account-content-show');
    contentTwoAddress.classList.remove('account-content-show');

  });

  addressButton.addEventListener('click', function() {
    contentTwoAddress.classList.add('account-content-show');
    contentTwo.classList.remove('account-content-show');

  });

  const addSelected = () => {
    const days = document.getElementById("user_dob_3i").children;
    const months = document.getElementById("user_dob_2i").children;
    const years = document.getElementById("user_dob_1i").children;
    const dob = document.getElementById("user_dob_3i").dataset.user;
    if(dob) {
      if(dob.split('-')[2].split('')[0] == 0) {
        days[dob.split('-')[2].split('')[1]].selected = true
      } else {
        days[dob.split('-')[2]].selected = true
      }

      if(dob.split('-')[1].split('')[0] == "0") {
        months[dob.split('-')[1].split('')[1]].selected = true
      } else {
        months[dob.split('-')[1]].selected = true
      }

      const yearValues = [...years].map( year => year.value)
      const yearSelected = yearValues.indexOf(dob.split('-')[0])
      years[yearSelected].selected = true
    }
  }
  addSelected()

  const tabDefault = () => {
    const tab = document.getElementById('tab-info').dataset.tab;
    if(tab == "account-content-two") {
      document.querySelector('.account-content-one').classList.remove('account-content-show');
      document.querySelector('.account-content-two').classList.add('account-content-show');

      document.querySelector('.account-tab-one').classList.remove('account-active-tab')
      document.querySelector('.account-tab-two').classList.add('account-active-tab')
    }
  }
  tabDefault()

  var deliveryId = 0
  const deliveryButtons = document.querySelectorAll('.sweet-alert-delivery-trigger');
  if (deliveryButtons) {
    deliveryButtons.forEach((button) => {
      button.addEventListener('click', () => {
        deliveryId = button.dataset.id
      })
    })
  }

  var billingId = 0
  const billingButtons = document.querySelectorAll('.sweet-alert-billing-trigger');
  if (billingButtons) {
    billingButtons.forEach((button) => {
      button.addEventListener('click', () => {
        billingId = button.dataset.id
      })
    })
  }

</script>

