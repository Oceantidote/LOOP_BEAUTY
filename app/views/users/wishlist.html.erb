<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <%= render 'shared/dash' %>
    </div>
    <div class="dash-content-container">
      <h2 class="insider-info-title mlb-title text-center">Your Wishlist</h2>
      <hr>
      <div class="wishlist-product-cards-container">
        <%= render 'shared/wishlist_product_card', wishlist_products: @wishlist_products %>
      </div>
    </div>
  </div>
</div>

<script>
  itemAdded = document.querySelector('.item-added');
  addToBag = document.querySelectorAll('.add-to-bag-grey');

  addToBag.forEach(function(button) {
    button.addEventListener('click', function() {
      itemAdded.classList.add('item-added-show');
      setTimeout(() => itemAdded.classList.remove('item-added-show'), 4000)
    });
  });
</script>
