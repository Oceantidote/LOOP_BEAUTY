<div class="dashboard-wrapper">
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <%= render 'shared/influencer_dash' %>
    </div>
    <div class="dash-content-container">
      <h2 class="insider-info-title mlb-title text-center">Analytics</h2>
      <hr>
      <div class="analytics-content">
        <h6 class="muli boldest">Pieces of content shared: <span class="normal didot"><%= @number_of_content_shared %></span></h6>
        <h6 class="muli boldest">Total number of visitors brought to site: <span class="normal didot"><%= @total_visits %></span></h6>
        <h6 class="muli boldest">Total number of sales: <span class="normal didot"><%= @total_sales %></span></h6>
        <h6 class="muli boldest">Conversion rate: <span class="normal didot"><%= @total_conversion_rate %>%</span></h6>
      </div>
      <hr>
      <div class="analytics-content">
        <h6>Content which generates most visits</h6>
        <% @top_content.each do |content| %>
          <%= content.title %>
        <% end %>
      </div>
      <hr>
      <div class="analytics-top-section">
        <div class="analytics-top-items">
          <h6 class="boldest">Top Items</h6>
          <% @top_items_count.each_with_index do |top_item, index| %>
            <% if top_item[1] > 0 %>
              <p class="didot"><%= index + 1 %>. <%= top_item.first %></p>
            <% end %>
          <% end %>
        </div>
        <div class="analytics-top-items">
          <h6 class="boldest">Top Brands</h6>
          <% @top_brands_count.each_with_index do |top_brand, index| %>
            <% if top_brand[1] > 0 %>
              <p class="didot"><%= index + 1 %>. <%= top_brand.first %></p>
            <% end %>
          <% end %>
        </div>
      </div>
      <hr>
      <div class="analytics-content-driven-sales">
        <h6 class="muli boldest">Top image content driving your sales</h6>
      </div>
    </div>
  </div>
</div>
