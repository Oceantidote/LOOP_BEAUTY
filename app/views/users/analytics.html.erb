<div class="dashboard-wrapper">
  <div class="dashboard-container-title mb-3 px-3 px-md-0">
    <h4 class="ls-xs mb-0 <%= 'mb-2' unless current_user.influencer %>"><%= current_user.influencer ? "influencer portal" : "my profile" %></h4>
    <% if current_user.influencer? %>
      <div class="d-flex justify-content-center align-items-center">
        <p class="m-0 lighter ls-xs d-none d-sm-block">hello, <%= current_user.first_name %></p>
        <%= image_tag url_for(current_user.avatar_photo), class: 'avatar-large ml-3' %>
      </div>
    <% end %>
  </div>
  <div class="dashboard-container">
    <div class="dash-menu-container">
      <% if current_user.influencer? %>
        <%= render 'shared/influencer_dash' %>
      <% else %>
        <%= render 'shared/dash' %>
      <% end %>
    </div>
    <div class="dash-content-container">
      <p class="ls-xs mb-3 mb-md-2 pl-3 pl-3 pl-md-0">analytics</p>
      <div class="dash-content flex-column p-3">
        <div class="container">
          <div class="row">
            <div class="col-12 col-sm-6 col-md-5">
              <div class="analytics-data-range-form">
                <%= simple_form_for :analytics, url: user_analytics_path ,method: :get, html: { onchange: 'this.submit()' } do |f| %>
                    <label for="range" class="s-medium-text ls-xs">Data for</label>
                    <%= f.input :range,
                                selected: @range_value || 'mtd', collection: [['Month', 'mtd'], ['Year', 'ytd']],
                                label: false,
                                include_blank: false,
                                input_html: { class: 'contact-form-input' }
                %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <hr class="w-100" style="border-color: #DDCCB5;">
        <div class="container">
          <% if params[:analytics].present? && params[:analytics][:range] == 'ytd'  %>
            <p class="ls-xs mb-4">Number of Sales by Month for the last 12 Months</p>
            <%= column_chart(
                @orders_graph_data,
                defer: true,
                xtitle: 'Month',
                ytitle: 'Sales',
                colors: ['#000']
              )
            %>
            <p class="ls-xs mb-4">Commission Earned by Day by Month for the last 12 Months</p>
            <%= column_chart(
                @commission_this_month,
                defer: true,
                round: 2,
                zeros: true,
                prefix: '£',
                xtitle: 'Month',
                ytitle: 'Commission',
                colors: ['#000']
              )
            %>
          <% else %>
            <p class="ls-xs mb-4">Number of Sales by Day this month</p>
            <%= column_chart(
                @orders_graph_data,
                defer: true,
                xtitle: 'Date',
                ytitle: 'Sales',
                colors: ['#000']
              )
            %>
            <p class="ls-xs mb-4">Commission Earned by Day this month</p>
            <%= column_chart(
                @commission_this_month,
                defer: true,
                round: 2,
                zeros: true,
                prefix: '£',
                xtitle: 'Date',
                ytitle: 'Commission',
                colors: ['#000']
              )
            %>
          <% end %>
        </div>
        <hr class="w-100" style="border-color: #DDCCB5;">
        <div class="analytics-content analytics-boxes">
          <div class="container">
            <div class="row">
              <div class="col-12 col-sm-6 col-md-3">
                <div class="analytics-content-section analytics-content-flex">
                  <h6 class="text-center neue-machina ls-xs">Pieces of content shared</h6>
                  <p class="large-text m-3"><%= @number_of_content_shared %></p>
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-3">
                <div class="analytics-content-section analytics-content-flex">
                  <h6 class="text-center neue-machina ls-xs">Visitors brought to the site</h6>
                  <p class="large-text m-3"><%= @total_visits %></p>
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-3">
                <div class="analytics-content-section analytics-content-flex">
                  <h6 class="text-center neue-machina ls-xs">Total number of sales</h6>
                  <p class="large-text m-3"><%= @total_sales %></p>
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-3">
                <div class="analytics-content-section analytics-content-flex">
                  <h6 class="text-center neue-machina ls-xs conditional-bottom-margin">Conversion rate</h6>
                  <p class="large-text m-3"><%= @total_conversion_rate %>%</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr class="w-100" style="border-color: #DDCCB5;">
        <div class="analytics-content">
          <div class="container">
            <p class="ls-xs mb-4">Content which generates most visits this <%= @range_value == "mtd" ? "month" : "year" %></p>
            <div class="row">
              <% @top_content.each_with_index do |content, index| %>
                <div class="col-12 col-sm-4 col-md-12 col-lg-4 d-flex flex-direction-column justify-content-end">
                  <div class="analytics-card">
                    <div class="analytics-number">
                      <span class="neue-machina mt-1 s-medium-text ls-xs"><%= index + 1 %></span>
                    </div>
                    <%= image_tag url_for(content.class == Lookbook ? content.photo : content.class == User ? current_user.avatar_photo : content.cover_photo  ), alt: "influencer lookbook photo"  %>
                    <p class="mt-1 no-bottom-margin medium-text truncate-text ls-xs"><%= content.class == User ? "You" : content.title %></p>
                    <p class="no-margin lighter truncate-text ls-xs"><%= content.visits %> visits</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <hr class="w-100" style="border-color: #DDCCB5;">
        <div class="analytics-top-section">
          <div class="container">
            <div class="row">
              <div class="col-12 col-sm-6 col-md-12 col-lg-6">
                <div class="analytics-top-items">
                  <h6 class="ls-xs neue-machina">Top Items this <%= @range_value == "mtd" ? "month" : "year" %></h6>
                  <% @top_items_count.each_with_index do |top_item, index| %>
                    <% if top_item[1] > 0 %>
                      <div class="analytics-list-item">
                        <div class="analytics-list-item-number">
                          <span class="neue-machina mt-1 s-medium-text ls-xs"><%= index + 1 %></span>
                        </div>
                        <div class="analytics-list-item-text pl-2">
                          <p class="no-margin neue-machina ls-xs"><%= top_item.first %></p>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
              <div class="col-12 col-sm-6 col-md-12 col-lg-6">
                <div class="analytics-top-items">
                  <h6 class="ls-xs neue-machina">Top Brands this <%= @range_value == "mtd" ? "month" : "year" %></h6>
                  <% @top_brands_count.each_with_index do |top_brand, index| %>
                    <% if top_brand[1] > 0 %>
                      <div class="analytics-list-item">
                        <div class="analytics-list-item-number">
                          <span class="neue-machina ml-1"><%= index + 1 %></span>
                        </div>
                        <div class="analytics-list-item-text pl-2">
                          <p class="no-margin neue-machina"><%= top_brand.first %></p>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr class="w-100" style="border-color: #DDCCB5;">
        <div class="analytics-content-driven-sales">
          <div class="container">
            <p class="ls-xs mb-4">Top content driving your sales this <%= @range_value == "mtd" ? "month" : "year" %></p>
            <div class="row">
              <% @top_content.each_with_index do |content, index| %>
                <div class="col-12 col-sm-4 col-md-12 col-lg-4 d-flex flex-direction-column justify-content-end">
                  <div class="analytics-card">
                    <div class="analytics-number">
                      <span class="neue-machina mt-1"><%= index + 1 %></span>
                    </div>
                    <%= image_tag url_for(content.class == Lookbook ? content.photo : content.class == User ? current_user.avatar_photo : content.cover_photo  ), alt: "influencer lookbook photo"  %>
                    <p class="mt-1 no-bottom-margin medium-text truncate-text ls-xs"><%= content.class == User ? "You" : content.title %></p>
                    <p class="no-margin lighter truncate-text ls-xs"><%= content.visits %> visits</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
