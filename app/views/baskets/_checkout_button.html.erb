<% if basket.basket_products.count == 0 %>
  <div class="primary-button w-100 disabled">Checkout</div>
<% elsif basket.any_out_of_stock? %>
    <p class="neue-machina tiny-margin-bottom boldest">Remove out of stock items to checkout</p>
    <div class="primary-button w-100 disabled">Checkout</div>
<% else %>
  <%= link_to 'Checkout', checkout_path, id: "pos-checkout", class: 'primary-button w-100' %>
<% end %>
