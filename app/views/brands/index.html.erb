<div class="influencers-wrapper">
  <h2 class="insider-info-title text-center">Shop by Brand</h2>
  <div class="container d-flex justify-content-center">
    <div class="influencers-container">
      <div class="row">
        <% @brands.each do |brand| %>
          <div class="col-6 col-sm-4 col-lg-3">
            <%= link_to brand_path(brand), class: "influencer-card-link" do %>
              <div class="each-influencer-avatar-card text-center">
                <%= image_tag (brand.logo.attached? ? url_for(brand.logo) : 'brand-default.jpg'), class: "influencer-large-avatar" %>
                <h6><%= brand.name %></h6>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

