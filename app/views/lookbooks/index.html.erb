<div class="content-margin pop-out-no-padding-mobile brands-banner">
  <%= link_to :back, class: 'back-button d-md-none' do %>
    <%= image_tag 'back.png', width: 28 %>
  <% end %>
  <div class="content-container">
    <div class="pop-out-image-banner py-5">
      <h2 class="neue-machina ls-sm mb-3 pt-4 text-center">Shop LookBook</h2>
      <p class="lighter mb-0 ls-sm text-center px-3 px-md-5 pb-4 user-description">Shop the various looks from our best curated products in the market used by our influencers.</p>
    </div>
  </div>
</div>
<div class="content-margin">
  <div class="content-container position-relative">
    <div class="row row-products">
      <% @lookbooks.each do |lookbook| %>
        <div class="col-12 col-md-4">
          <div class="card-image-results homepage-products mb-5">
            <div class="card influencerCard_<%= lookbook.id %> cursor-pointer" data-id="<%= lookbook.id %>">
              <div class="button-overlay d-none d-md-flex">
                <div class="oval-button mx-3">
                  <div class="button-text">
                    <p class="mb-0 bt-5 ls-sm">View Look</p>
                  </div>
                  <%= image_tag 'oval-button.svg' %>
                </div>
              </div>
              <div class="card_image">
                <%= image_tag url_for(lookbook.photo.variant(resize: '300x300')), alt: "product shade photo" %>
              </div>
            </div>
            <div class="card-info">
              <p class="mb-2 truncate-text lighter ls-xs"><%= lookbook.title %></p>
              <p class="neue-machina text-secondary"><%= lookbook.user.instagram %></p>
            </div>
          </div>
        </div>
        <%= render 'shared/influencer_content_modal', content: lookbook %>
      <% end %>
    </div>
  </div>
</div>

<div class="col-12 d-flex justify-content-center my-4">
  <div class="show-page-entries">
    <p class="ls-xs lighter"><%= page_entries_info @lookbooks %></p>
  </div>
</div>
<div class="col-12 d-flex justify-content-center mb-5">
  <%= paginate @lookbooks %>
</div>
